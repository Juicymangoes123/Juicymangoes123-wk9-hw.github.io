{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Patterns of migration into Australia",
    "projection": {"type": "equirectangular"},
    "layer":[
        {
            "data": {
                "url": "au-states.topojson",
                "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "overseas-migration.csv"
                        },
                        "key": "State",
                        "fields": ["2004-05"]
                    }
                },
                {"calculate": "datum.2004-05 + 1", "as": "Percentage-of-annual-national-migration-total"}
            ],            
            "mark": {"type": "geoshape", "fill": "black", "stroke": "green"}
        },
        {
            "data": {
                "url": "au-states.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "stroke": "red"}
        }
    ]
}